const { Console } = require('./console');
const console = new Console();


function initCompound () {
    let that = {
        component: initComponent()
    }

    return {
        incrementConponent () {
            that.component.incrementCounter()
        },

        printCounter () {
            console.writeln(that.component.getCounter())
        }
    }
}

function initComponent () {
    let that = {
        counter: 0
    }

    return {
        getCounter () {
            return that.counter
        },

        incrementCounter () {
            that.counter++
        }
    }
}

const prueba = initCompound();
console.writeln(prueba.printCounter())

prueba.incrementConponent()
console.writeln(prueba.printCounter())

prueba.incrementConponent()
console.writeln(prueba.printCounter())